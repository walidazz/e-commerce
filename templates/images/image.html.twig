<div class="form-widget">

    {% for image in field.value %}
    <a href="#" class="ea-lightbox-thumbnail" data-featherlight="#ea-lightbox-{{image.id}}"
        data-featherlight-close-on-click="anywhere">
        <img src="{{asset('/images/attachments/' ~ image.url)}}" width="100" height="100">
    </a>

    <div id="ea-lightbox-{{image.id}}" class="ea-lightbox">
        <img src="{{asset('/images/attachments/' ~ image.url)}}" width="500" height="500">
    </div>
    {% endfor %}





</div>